@using Claro.Foundation.Dictionary.Extensions
@model Claro.Feature.Blog.Models.BlogViewModel
@if (Model != null)
{
<div class="card featured-article">
    @Model.BlogImage
    @if (string.IsNullOrEmpty(Model.BlogImage.ToString()))
    {
        <img src="/images/NoImage.png" alt="No Image" />
    }
    <div class="featured-article-view-comments">
        @*<i class="fa fa-eye"></i> <span class="count">@Model.ViewCount</span>*@
        <i class="fa fa-comments"></i> <span class="count">@Model.CommentCount</span>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-10">
                <div class="card-content">
                    <a href="@Model.BlogUrl" title="@Model.Title"><h1 class="card-title"> <div class="two-lines"> @Model.Title </div></h1></a>
                    <h6 class="mb-3">@(Model.BlogCreated == DateTime.MinValue ? "" : Model.BlogCreated.ToString("MMM dd, yyyy"))</h6>
                    <p class="box box--responsive">
                        @Model.Intro
                    </p>
                </div>
            </div>
            <div class="col-md-2">
                @Model.AuthorImage
                <h5 class="author_name"> @Model.AuthorFirstName <br> @Model.AuthorLastName </h5>
            </div>
        </div>
    </div>
</div>
}
