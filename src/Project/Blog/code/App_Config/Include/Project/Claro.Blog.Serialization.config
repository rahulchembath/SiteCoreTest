<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration
          name="Project.Blog"
          description="Claro Blog Site"
          dependencies="Foundation.Settings,Foundation.Dictionary,Project.Common"
          patch:after="configuration[@name='Foundation.Serialization']"
          extends="Helix.Base">
          <predicate>
            <include name="Claro.Layouts" database="master" path="/sitecore/layout/Layouts/Project/USClaroBlog" />
            <include name="Claro.Renderings" database="master" path="/sitecore/layout/Renderings/Project/USClaroBlog" />
            <include name="Claro.Templates" database="master" path="/sitecore/templates/Project/UsClaroBlog" />
            <include name="Claro.Content" database="master" path="/sitecore/content/USClaroBlog" />

            <include name="Media.Authors" database="master" path="/sitecore/media library/Authors" />
            <include name="Media.Core" database="master" path="/sitecore/media library/Core" />
            <include name="Media.Global" database="master" path="/sitecore/media library/Global" />
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>
